{
  "name": "@repo/admin",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun with-env next build",
    "clean": "git clean -xdf .cache .next .turbo .vercel node_modules",
    "clean:built": "git clean -xdf .cache .next .turbo .vercel",
    "dev": "bun with-env next dev --turbopack",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "bun with-env next start",
    "typecheck": "tsc --noEmit",
    "pages:build": "bunx @cloudflare/next-on-pages",
    "preview": "bun pages:build && wrangler pages dev --persist-to ../../.wrangler/state",
    "deploy": "bun pages:build && wrangler pages deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
    "setup": "bun run scripts/setup.ts",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.9.1",
    "@clack/prompts": "^0.9.1",
    "@hookform/resolvers": "^3.10.0",
    "@iarna/toml": "^2.2.5",
    "@libsql/client": "^0.14.0",
    "@repo/db": "*",
    "@repo/ui": "*",
    "@repo/validators": "*",
    "@tanstack/react-query": "^5.80.6",
    "@tanstack/react-query-persist-client": "^5.80.6",
    "better-auth": "^1.2.8",
    "csv-import-react": "^1.0.14",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "lucide-react": "^0.469.0",
    "next": "15.2.4",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.57.0",
    "react-phone-number-input": "^3.4.12",
    "zod": "^3.25.53"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@cloudflare/workers-types": "^4.20250606.0",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/tsconfig": "*",
    "@types/node": "^22.15.30",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "bun-types": "^1.2.15",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.57.1",
    "eslint-plugin-next-on-pages": "^1.13.12",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vercel": "^39.4.2",
    "wrangler": "3.93.0"
  },
  "prettier": "@repo/prettier-config",
  "overrides": {
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1"
  }
}
